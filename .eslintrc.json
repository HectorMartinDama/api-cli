{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node" : true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "ignorePatterns": ["tests/*.js"], // ignore the test folder
    "rules": {
        "quotes": [2, "single", { "avoidEscape" : true}],
        "semi" : [2, "always"]
    }
}
